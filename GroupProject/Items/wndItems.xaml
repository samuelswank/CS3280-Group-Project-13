<Window x:Class="GroupProject.Items.wndItems"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GroupProject.Items"
        mc:Ignorable="d"
        Title="wndItems" Height="225" Width="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="80*" />
            <RowDefinition Height="20*"/>
        </Grid.RowDefinitions>
        <DataGrid Grid.Row="0" Name="dgItems">
        </DataGrid>
        <WrapPanel Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button Name="btnCancelItems" Content="Cancel" Width="100" Margin="25,0" Click="BtnCancelItems_Click">
            </Button>
            <Button Name="btnSubmitItems" Content="Submit" Width="100" Margin="25,0">
            </Button>
        </WrapPanel>
    </Grid>
</Window>
